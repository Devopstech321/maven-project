pipeline
{
    agent any
    stages
    {
        stage ('scm checkout')
        {
            steps {git branch: 'master', url: 'https://github.com/Devopstech321/maven-project.git'}
        }
        stage ('create artifact')
        {
           steps { withMaven( jdk: 'JAVA-HOME', maven: 'Maven_Home') {
        sh 'mvn clean package'
}} 
        }
        stage ('deploy to tomcat')
        {
            steps {sshagent(['tomcat-ssh']) {
    sh 'scp -o StrictHostKeyChecking=no **/*.war root@10.160.0.10:/tomcat/apache-tomcat-9.0.73/webapps'
}}
        }
    }
}